generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quiz {
  entityId         Int    @id @default(autoincrement())
  uuid             String @unique @default(uuid())
  title            String
  description      String
  shortDescription String
  bannerBgColor    String
  bgColor          String
  image            String
  imageSmall       String
  tasks            Task[]

  @@map("quiz")
}

model Task {
  entityId    Int            @id @default(autoincrement())
  quizId      Int
  extId       String
  title       String
  description String
  url         String
  quiz        Quiz           @relation(fields: [quizId], references: [entityId], onDelete: Cascade)
  progress    TaskProgress[]

  @@map("task")
}

model TaskProgress {
  id          Int      @id @default(autoincrement())
  phone       String
  taskId      Int
  completedAt DateTime @default(now())
  task        Task     @relation(fields: [taskId], references: [entityId], onDelete: Cascade)

  @@unique([phone, taskId])
  @@index([phone])
  @@map("task_progress")
}
